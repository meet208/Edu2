<%- include('./partials/header'); -%>
<br><br>
<div class="container-fluid">
    <h4 class="center-align"><%= message %></h4>
    <div class="container w-30 m-3 mt-4 p-2 mx-auto rounded-0 border shadow-lg">
        <form action="/login" method="post" class="m-5">
            <div class="input-field">
                <input id="email" name="email" type="email" class="validate form-control" required>
                <label class="form-label" for="email">Email</label>
            </div>
            <div class="input-field">
                <input id="password" name="password" type="password" class="validate form-control" required>
                <label class="form-label" for="password">Password</label>
            </div>
            <button class="btn waves-effect waves-light" type="submit" name="action">Login
            </button>
        </form>
    </div>
</div>

<%- include('./partials/footer'); -%>